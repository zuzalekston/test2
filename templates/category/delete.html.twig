{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_category_delete'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_category_delete'|trans({'%id%': category.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('category_delete', {id: category.id}) }) }}
    {{ form_widget(form) }}

    {% if category is defined and category|length %}
        <dl class="'dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ category.id }}</dd>
            <dt>{{ 'label_category'|trans }}</dt>
            <dd>{{ category.category }}</dd>
        </dl>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>

    {% endif %}

    <div class="form-group row float-sm-right">
        {% if not category is defined and category|length %}
            <a href="{{ url('category_delete', {id: category.id}) }}" title="{{ 'action_delete'|trans }}">
                {{ 'action_delete'|trans }}
            </a>
        {% endif %}
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('category_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}