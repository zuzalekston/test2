{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_tag_delete'|trans({'%id%': tag.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_tag_delete'|trans({'%id%': tag.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('tag_delete', {id: tag.id}) }) }}
    {{ form_widget(form) }}

    {% if comment is defined and comment|length %}
        <dl class="'dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ tag.id }}</dd>
            <dt>{{ 'label_title'|trans }}</dt>
            <dd>{{ tag.text }}</dd>
        </dl>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>

    {% endif %}

    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_delete'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('tag_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}
